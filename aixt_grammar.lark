stmt:   assign_stmt

// assign_stmt: expressionList assign_op expressionList
assign_stmt: IDENT assign_op expr    

!assign_op:  ("+" | "-" | "|" | "^" | "*" | "/" | "%" | "<<" | ">>" | "&" )? "="
    
expr:   NUMBER
    |   IDENT        

