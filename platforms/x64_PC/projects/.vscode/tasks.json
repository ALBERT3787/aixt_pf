{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Aixt: Transpile",
        "type": "shell",
        "windows": {
            "command": "python ..\\..\\..\\aixtt.py ${file}",
        },
        "linux": {
            "command": ["python3",
                        "../../../aixtt.py",
                        "${file}"], // change "python3" to "python" if necessary
        },
        "problemMatcher": ["$tsc"],
        "group": "build",
        "presentation": {
          "showReuseMessage": false
        }
      },
      {
        "label": "Aixt: Compile",
        "type": "shell",
        "windows": {
            "command": "${config:CC_windows} ${fileDirname}\\${fileBasenameNoExtension}.c -T=NXT -S=usb -d",
        },
        "linux": {
            "command": ["${config:CC_linux}",
                        "${fileDirname}/${fileBasenameNoExtension}.c", 
                        "-o ${fileDirname}/${fileBasenameNoExtension};"],
        },
        "problemMatcher": ["$tsc"],
        "group": "build",
        "presentation": {
          "showReuseMessage": false
        }
      },
      {
        "label": "Aixt: Build",
        "group": "build",
        "dependsOrder": "sequence",
        "dependsOn": ["Aixt: Transpile", "Aixt: Compile"]
      }
    ]
  }