{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Transpile",
        "type": "shell",
        "windows": {
            "command": "python ..\\..\\..\\aixtt.py ${file} -nxc",
        },
        "linux": {
            "command": "python3 ../../../aixtt.py ${file} -nxc", // change "python3" to "python" if necessary
        },
        "problemMatcher": ["$tsc"],
        "group": "build",
        "presentation": {
          "showReuseMessage": false
        }
      },
      {
        "label": "Compile",
        "type": "shell",
        "windows": {
            "command": "${config:nbc_windows} ${fileDirname}\\${fileBasenameNoExtension}.nxc",
        },
        "linux": {
            "command": "${config:nbc_linux} ${fileDirname}/${fileBasenameNoExtension}.nxc",
        },
        "problemMatcher": ["$tsc"],
        "group": "build",
        "presentation": {
          "showReuseMessage": false
        }
      },
      {
        "label": "Build",
        "group": "build",
        "dependsOrder": "sequence",
        "dependsOn": ["Transpile", "Compile"]
      }
    ]
  }